<!DOCTYPE html>
<html>
  <head>
    <title>PinInit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('logo.ico') %>

    <meta property="og:title" content="Pininit" />
    <meta property='og:image' content="<%= image_url('project_pic.png') %>"/>
    <meta property="og:description" content="Pininit is a clone of a the common social media platform Pinterest, it features a React Redux front end with a Ruby on Rails backend, PostgreSQL db, and AWS s3 for image cloud storage."/>
    <meta property="og:url"content="https://pininit.herokuapp.com/#/"/>

  </head>

  <body>

    <% if current_user %>
      <script>
        window.currentUser= {
          "id": <%= current_user.id %>,
          "email": "<%= current_user.email %>",
          "bio": "<%= current_user.bio  %>",
          "age": <%= current_user.age  %>,
          "f_name": "<%= current_user.f_name  %>",
          "l_name": "<%= current_user.l_name  %>",
          "username": "<%= current_user.username  %>",
          "photoUrl": "<%= current_user.profile_pic.attached? ? url_for(current_user.profile_pic) : false %>"
        };
      </script>
    <% end %>

      <script type="text/javascript">
        window.logoURL = "<%= image_url('logo.png') %>";
        window.bellURL = "<%= image_url('bell-solid.png')%>"
        window.messageIconURL = "<%= image_url('message-icon.png')%>"
        window.penURL = "<%= image_url('pen-solid.png')%>"
        window.lockURL = "<%= image_url('lock.png')%>"
        window.plusURL = "<%= image_url('plus-solid.png')%>"
        window.settingsIconURL = "<%= image_url('settings-icon.png')%>"
        window.shareLogoURL = "<%= image_url('share-logo.png')%>"
        window.theXURL = "<%= image_url('the-X.png')%>"
        window.dropdownIcon = "<%= image_url('chevron-down-solid.png')%>"
        window.avatar = "<%= image_url('default_inst.jpg')%>"
        window.moreURL = "<%= image_url('more.png')%>"
        window.downArrowURL = "<%= image_url('down-arrow.png')%>"
        window.upArrowURL = "<%= image_url('up-arrow.png')%>"
        
        window.redWarning = "<%= image_url('alert_red.png')%>"
        window.whiteX = "<%= image_url('whiteX.png')%>"

        window.deleteURL = "<%= image_url('delete.png')%>"
        window.editPenURL = "<%= image_url('pen-solid.png')%>"
        window.smallLockURL = "<%= image_url('smallLock.png')%>"
        window.dotsBlackURL = "<%= image_url('dotsBlack.png')%>"
        window.theXURL = "<%= image_url('theX.png')%>"
        window.magnaURL = "<%= image_url('magnifying-glass.png')%>"
        window.upRightArrowURL = "<%= image_url('upRightArrow.png')%>"
        window.plusSignURL = "<%= image_url('plusSign.png')%>"
        window.grayHeartURL = "<%= image_url('grayHeart.png')%>"
        window.redHeartURL = "<%= image_url('redHeart.png')%>"
        window.picLogoURL = "<%= image_url('picLogo.png') %>"
        window.backArrowFile = "<%= image_url('backArrowFile.png') %>"
        window.loadingIcon = "<%= image_url('loading_icon.png') %>"
        window.redPlusIcon = "<%= image_url('redPlus.png') %>"
        window.left_arrow = "<%= image_url('left_arrow.png') %>"
        window.right_arrow = "<%= image_url('right_arrow.png') %>"
        window.gif_0 = "<%= image_url('gif_splash_0.gif') %>"
        window.gif_1 = "<%= image_url('gif_splash_1.gif') %>"
        window.gif_2 = "<%= image_url('gif_splash_2.gif') %>"
        window.gif_3 = "<%= image_url('gif_splash_3.gif') %>"
        window.gif_4 = "<%= image_url('gif_splash_4.gif') %>"
        window.profilePic = "<%= image_url('Snapseed.jpg') %>"
      </script>

      <script type="text/javascript">
        window.editingBoard = "0";
        window.editPin = "0";
      </script>

    <%= yield %>
  </body>
</html>
